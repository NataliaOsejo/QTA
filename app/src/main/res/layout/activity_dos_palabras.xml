<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dos_palabras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DosPalabras">

    <!-- Toolbar como encabezado -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sign_in"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:title="Dos palabras"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_sign_in"
        app:layout_constraintBottom_toBottomOf="parent">



    </LinearLayout>

    <!-- LinearLayout Ãºnico con dos filas: una para los botones y otra para los textos -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:background="@color/footerBackground"
        android:padding="8dp"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Fila de ImageButtons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_dos_mitades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_dos_mitades"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Dos mitades" />

            <ImageButton
                android:id="@+id/btn_dos_palabras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_dos_palabras"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Dos palabras" />

            <ImageButton
                android:id="@+id/btn_quitar_fragmento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_quitar_fragmento"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Quitar fragmento" />
        </LinearLayout>

        <!-- Fila de TextViews debajo de los ImageButtons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_dos_mitades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dos_mitades"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_dos_palabras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dos_palabras"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_quitar_fragmento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/quitar_fragmento"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
